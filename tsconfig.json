{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": ["ES2019.Array"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@auth/*": ["src/auth/*"],
      "@users/*": ["src/users/*"],
      "@core/*": ["src/core/*"],
      "@mails/*": ["src/mails/*"],
      "@logs/*": ["src/logs/*"],
      "@academics/*": ["src/academics/*"],
      "@students/*": ["src/students/*"],
      "@schedules/*": ["src/schedules/*"],
      "@counseling/*": ["src/counseling/*"],
      "@fouls/*": ["src/fouls/*"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
