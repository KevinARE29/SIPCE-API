{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@auth/*": ["src/auth/*"],
      "@users/*": ["src/users/*"],
      "@core/*": ["src/core/*"],
      "@mails/*": ["src/mails/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
